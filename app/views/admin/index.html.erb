<div class="max-w-5xl mx-auto p-6 bg-white shadow-md rounded-lg">
  <h2 class="text-2xl font-bold text-gray-800 mb-4">Manage Users</h2>

  <% @users.each do |user| %>
    <div class="bg-gray-100 p-4 rounded-lg shadow-sm mb-4">
      <p class="text-lg font-semibold text-gray-700"><%= user.email %></p>

      <%= form_for(user, { url: admin_path(user), remote: true, method: :patch, html: { class: "mt-3" } }) do |f| %>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 items-center">
          <div>
            <label class="text-sm text-gray-600">Role</label>
            <%= f.select :role, User.roles.keys.map { |w| [w.humanize, w] }, {}, class: "w-full border-gray-300 rounded-md shadow-sm text-sm px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <label class="text-sm text-gray-600">Email</label>
            <%= f.text_field :email, class: "w-full border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div class="flex items-end">
            <%= f.submit "Update", class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition w-full sm:w-auto" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="mt-8 flex justify-center gap-6">
    <%= link_to "See Transactions", transactions_path, class: "bg-green-600 text-white px-5 py-2 rounded-md hover:bg-green-700 transition shadow-md" %>
    <%= link_to "Create Game", new_creategame_path, class: "bg-purple-600 text-white px-5 py-2 rounded-md hover:bg-purple-700 transition shadow-md" %>
  </div>
</div>
